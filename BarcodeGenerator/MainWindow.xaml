<Window x:Class="AcuPower.BarcodeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcuPower.BarcodeGenerator"
        mc:Ignorable="d"
        Title="Barcode Generator - AcuPower" Height="900" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Barcode Generator" 
                   FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="1" Text="AcuPower - acupowererp.com" 
                   FontSize="12" Foreground="Gray" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Input Section -->
        <GroupBox Grid.Row="2" Header="Barcode Data" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <Label Content="Enter Text/Inventory ID (separate multiple codes with semicolon ;):"/>
                <TextBox x:Name="InputTextBox" 
                         TextChanged="InputTextBox_TextChanged"
                         FontSize="14" Margin="0,5,0,10"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="60"/>
                
                <Label Content="Barcode Type:"/>
                <ComboBox x:Name="BarcodeTypeComboBox" 
                          SelectionChanged="BarcodeTypeComboBox_SelectionChanged"
                          Margin="0,5,0,10">
                    <ComboBoxItem Content="Code 128" IsSelected="True"/>
                    <ComboBoxItem Content="EAN-13"/>
                    <ComboBoxItem Content="EAN-8"/>
                    <ComboBoxItem Content="UPC-A"/>
                    <ComboBoxItem Content="UPC-E"/>
                    <ComboBoxItem Content="QR Code"/>
                    <ComboBoxItem Content="Data Matrix"/>
                    <ComboBoxItem Content="PDF417"/>
                    <ComboBoxItem Content="ITF"/>
                    <ComboBoxItem Content="Codabar"/>
                </ComboBox>
            </StackPanel>
        </GroupBox>

        <!-- Options Section -->
        <GroupBox Grid.Row="3" Header="Options" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Label Grid.Row="0" Grid.Column="0" Content="Width:"/>
                <TextBox x:Name="WidthTextBox" Grid.Row="0" Grid.Column="1" 
                         Text="300" Margin="5,0,0,5"/>
                
                <Label Grid.Row="1" Grid.Column="0" Content="Height:"/>
                <TextBox x:Name="HeightTextBox" Grid.Row="1" Grid.Column="1" 
                         Text="150" Margin="5,0,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Generate Button -->
        <Button Grid.Row="4" Content="Generate Barcode" 
                Click="GenerateButton_Click"
                FontSize="16" FontWeight="Bold"
                Padding="20,10" Margin="0,0,0,10"
                Background="#512BD4" Foreground="White"/>

        <!-- Barcode Display -->
        <GroupBox Grid.Row="5" Header="Generated Barcodes" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ItemsControl x:Name="BarcodeContainer" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="1" Margin="0,5" Padding="10" Background="White">
                                <StackPanel>
                                    <Image Source="{Binding Image}" 
                                           Stretch="Uniform" 
                                           MaxWidth="600"
                                           HorizontalAlignment="Center"
                                           Margin="5"/>
                                    <TextBlock Text="{Binding Label}" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,5,0,0"
                                               FontSize="12" 
                                               Foreground="Gray"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- Save Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save as PDF" 
                    Click="SaveAsPdfButton_Click"
                    FontSize="14" Padding="15,8"
                    Margin="0,0,10,0"
                    IsEnabled="False" x:Name="SaveAsPdfButton"
                    Background="#28a745" Foreground="White"/>
            <Button Content="Save All Barcodes" 
                    Click="SaveAllButton_Click"
                    FontSize="14" Padding="15,8"
                    Margin="0,0,10,0"
                    IsEnabled="False" x:Name="SaveAllButton"/>
            <Button Content="Save Selected Barcode" 
                    Click="SaveButton_Click"
                    FontSize="14" Padding="15,8"
                    IsEnabled="False" x:Name="SaveButton"/>
        </StackPanel>
    </Grid>
</Window>
